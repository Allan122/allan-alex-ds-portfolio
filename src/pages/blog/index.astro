---
    // This is the main page for your blog, located at /blog
    // It finds all your articles and creates a list of links to them.
    import Layout from '../../layouts/Layout.astro';
    import { getCollection } from 'astro:content';

    const posts = (await getCollection('blog')).sort(
    	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
    );
    ---

    <Layout 
        title="Blog | Allan C. Alex"
        description="A collection of articles and deep dives on data science topics by Allan C. Alex."
    >
        <section class="py-16 md:py-24">
            <div class="text-center mb-12">
                <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 font-poppins">
                    From the Desk of Allan C. Alex
                </h1>
                <p class="text-lg text-gray-400">
                    Articles and deep dives on data science, machine learning, and career insights.
                </p>
            </div>

            <div class="max-w-3xl mx-auto space-y-8">
                {posts.map((post) => (
                    <a href={`/blog/${post.slug}/`} class="block bg-gray-800/50 p-6 rounded-lg ring-1 ring-white/10 hover:ring-teal-400 transition-all">
                        <p class="text-sm text-gray-400">{new Date(post.data.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
                        <h2 class="text-2xl font-bold text-white mt-2 mb-3 font-poppins">
                            {post.data.title}
                            {post.data.subtitle && <span class="block text-lg font-normal text-gray-400 mt-1">{post.data.subtitle}</span>}
                        </h2>
                        <p class="text-gray-300">{post.data.description}</p>
                        <div class="text-teal-400 font-semibold mt-4">Read Article &rarr;</div>
                    </a>
                ))}
            </div>
        </section>
    </Layout>
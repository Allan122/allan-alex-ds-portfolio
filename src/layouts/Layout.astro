---
// This is the master template for every page on your site.
// It sets up the basic HTML structure, imports fonts, and includes
// the Header and Footer components.

// NOTE: These next two lines will show an error for now. This is NORMAL.
// It's because we haven't created the Header.astro and Footer.astro files yet.
// We will create them in the very next step.
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// This line imports the styles we created in the previous step.
import '../styles/global.css';

// This allows us to pass a unique title and description to each page for SEO.
interface Props {
	title: string;
	description: string;
}
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF--8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

    <!-- These lines import the professional fonts from Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Poppins:wght@700&display=swap" rel="stylesheet">
	</head>
	<body class="min-h-screen flex flex-col">
    <!-- This div is for a subtle background pattern to add professionalism -->
    <div class="absolute inset-0 z-[-1] bg-[radial-gradient(circle_500px_at_50%_200px,#31979522,transparent)]"></div>
        
    <div class="relative z-10 flex-grow">
      <Header />
      <main class="w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
          <!-- The unique content of each page (like index.astro) will be injected here -->
          <slot /> 
      </main>
    </div>
    <Footer />
	</body>
</html>